{
  "name": "portfolio",
  "version": "0.1.0",
  "description": "My personal portfolio",
  "private": true,
  "homepage": "https://thnlsn.github.io/portfolio/",
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-scripts": "^3.4.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "sass": "^1.32.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "npm-run-all -p -r start watch:sass",
    "watch:sass": "sass --watch src/sass/main.scss src/css/style.css",
    "compile:sass": "sass src/sass/main.scss src/css/style.comp.css",
    "prefix:css": "postcss ./src/css/style.comp.css --use autoprefixer -o ./src/css/style.prefix.css",
    "compress:css": "sass ./src/css/style.prefix.css ./src/css/style.css --style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": "last 10 versions",
  "production": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "development": [
    "last 1 chrome version",
    "last 1 firefox version",
    "last 1 safari version"
  ]
}
